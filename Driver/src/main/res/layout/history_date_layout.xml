<?xml version="1.0" encoding="utf-8"?>
<!--Line 4 Adde Parent View as Coordinator Layout
  for using Snackbar in activity @mukesh 29-8-2016-->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="left"
    android:orientation="vertical" >

    <com.jayeen.driver.widget.MyFontTextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/history_header_line_white"
        android:paddingLeft="@dimen/dimen_history_date_margin"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/color_blue" />

</LinearLayout>
    </android.support.design.widget.CoordinatorLayout>