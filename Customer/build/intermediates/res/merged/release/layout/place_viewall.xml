<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/place_viewllalyout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/place_keyName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:textStyle="normal"
            android:textColor="@color/newcolor"
            android:text="@string/text_Viewall"
            android:layout_marginLeft="10dip"
            android:maxLines="1"
            android:textSize="15dip"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/place_heart"
            android:layout_width="15dip"
            android:src="@drawable/ic_doublearrow"
            android:layout_marginRight="11dip"
           android:layout_marginEnd="11dip"
            android:layout_gravity="center_vertical"
            android:layout_height="15dip" />

    </LinearLayout>

</RelativeLayout>