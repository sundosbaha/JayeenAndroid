<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@null"
    android:layoutDirection="ltr"
    android:textDirection="rtl"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!--changed by kalai line no: 53,56,68,72-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:elevation="8dp"
        android:orientation="vertical">
        <!--android:background="@color/white"-->

        <com.jayeen.customer.component.MyFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="@string/dialog_logout_caps"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_app_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_divider_line" />

        <com.jayeen.customer.component.MyFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_margin_feedback"
            android:text="@string/dialog_logout_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_app_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_margin_mainscreen"
            android:orientation="horizontal">

            <!--  android:background="@drawable/bg_btn_small"-->
            <!--change to-->
            <!-- android:background="@color/colorPrimary"-->
            <!-- android:layout_height="@dimen/bg_name_height"-->

            <Button
                android:id="@+id/tvLogoutOk"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/activity_margin_register"
                android:layout_weight="1"
                android:background="@drawable/button_selector_primary"
                android:gravity="center"
                android:text="@string/text_journey_ok"
                android:textColor="@color/white" />
            <!--android:background="@drawable/bg_btn_small"-->
            <!--change to-->
            <!-- android:background="@color/colorPrimary"-->
            <!--android:layout_height="@dimen/bg_name_height"-->

            <Button
                android:id="@+id/tvLogoutCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/activity_margin_register"
                android:layout_marginRight="@dimen/activity_margin_register"
                android:layout_weight="1"
                android:background="@drawable/button_selector_primarydark"
                android:gravity="center"
                android:text="@string/text_cancel"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
